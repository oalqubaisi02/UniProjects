<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate CGPA"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:background="#06255A"/>

    <TextView
        android:id="@+id/CGPAView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current CGPA:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="#06255A"/>

    <EditText
        android:id="@+id/CGPAText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CGPAView"
        android:layout_toRightOf="@+id/CGPAView"
        android:hint="Enter current CGPA"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/finishedCrView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finished credits:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@+id/CGPAView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="#06255A"/>

    <EditText
        android:id="@+id/finishedCrText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/finishedCrView"
        android:layout_toRightOf="@+id/finishedCrView"
        android:hint="Enter finished hours"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/finishedCrView"
        android:background="#06255A"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/newGPAView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New GPA:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@+id/split"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="#06255A"/>

    <TextView
        android:id="@+id/newGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newGPAView"
        android:layout_toRightOf="@+id/newGPAView"
        android:text=""
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/newCGPAView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CGPA:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@+id/newGPAView"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="#06255A"/>

    <TextView
        android:id="@+id/newCGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newCGPAView"
        android:layout_toRightOf="@+id/newCGPAView"
        android:text=""
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:onClick="CalculateGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newCGPAView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Calculate"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:backgroundTint="#06255A"/>
</RelativeLayout>